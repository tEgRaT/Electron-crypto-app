{
  "name": "crypto-app",
  "version": "1.0.0",
  "description": "An Electron crypto app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/images/Bitcoin.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"CryptoApp\"",
    "package-linux": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/icon.png --prune=true --out=release-builds"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tEgRaT/Electron-crypto-app.git"
  },
  "author": "tEgRaT",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tEgRaT/Electron-crypto-app/issues"
  },
  "homepage": "https://github.com/tEgRaT/Electron-crypto-app#readme",
  "devDependencies": {
    "electron": "1.8.4",
    "electron-packager": "^12.0.1"
  },
  "dependencies": {
    "axios": "^0.18.0"
  }
}
